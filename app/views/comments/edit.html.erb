<%=stylesheet_link_tag 'edit-post'%>
<div id = "edit-form-div">
    <h2 class = "edit-title">Edit comment</h2>
    <div class = "post-content">
        <div class = "user-post-info">
            <div class = "profile-picture"></div>
            <div class = "user-details">
                <h3><%=@post.user.name%></h3>
                <p>Posted <%=distance_of_time_in_words(Time.now, @post.created_at)%> ago</p>
            </div>
        </div>

        <p class = "body-text"><%=@post.body_text%></p>

        <div class = "react">
            <%if did_user_like_post?(@post)%>
                <a class = "react-link" id = "liked" href = <%=post_like_path(@post, 0)%> data-method = "delete" title = "Unlike post"><span class="material-icons md-18" id = "liked">thumb_up</span>Liked (<%=@post.likes.length%>)</a>
            <%else%>
                <a class = "react-link" href = <%=post_likes_path(@post)%> data-method = "post" title = "Like post"><span class="material-icons md-18">thumb_up</span>Like (<%=@post.likes.length%>)</a>
            <%end%>
            <a class = "react-link" href = # title = "View comments"><span class="material-icons md-18" id = "react-icon">add_comment</span>Comments (<%=@post.comments.length%>)</a>
        </div>
        
        <%=render 'posts/comments', post: @post, edit: true, edit_comment: @edit.id%>
        <div class = "edit-comment-div">
            <div class = "small-profile-picture"></div>
            <%=form_with(model: @edit, method: "put", class: "edit-comment-form", url: post_comment_path(@post, @edit)) do|f|%>
                <%= f.text_area(:comment_text)%>
                <%= f.submit(class: "update-btn")%>
            <%end%>
        </div>
    </div>
</div>
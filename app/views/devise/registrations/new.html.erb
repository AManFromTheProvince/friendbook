<%= stylesheet_link_tag 'devise'%>
<div id = "form-div">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class = "profile-picture"></div>
    <%= f.label(:profile_picture, "Add a profile picture")%><br/>
    <%= f.file_field :profile_picture, accept: 'image/png,image/jpeg'%>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "name-field" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "password-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'submit-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
